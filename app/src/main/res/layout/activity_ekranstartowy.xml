<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EkranStartowy">

    <ImageView
        android:id="@+id/IntroIMG"
        android:layout_width="340dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/new_intro340x150"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.10" />

    <ImageButton
        android:id="@+id/PrzyciskRozpocznij"
        android:layout_width="320dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/przyciskrozpocznij320x80"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/IntroIMG"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/PrzyciskUstawienia"
        android:layout_width="320dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/przyciskustawienia320x80"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/PrzyciskRozpocznij"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/PrzyciskOProgramie"
        android:layout_width="320dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/przyciskoprogramie320x80"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/PrzyciskUstawienia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/PrzyciskWyjdz"
        android:layout_width="320dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/przyciskowyjdz320x80"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/PrzyciskOProgramie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>