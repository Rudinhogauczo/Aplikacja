<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EkranGlowny">

    <ImageView
        android:id="@+id/Obrazek_NapisWybierzKonto"
        android:layout_width="320dp"
        android:layout_height="43dp"
        app:srcCompat="@drawable/tekstwybierz_konto320x43"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <GridLayout
        android:id="@+id/siatkakont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:rowCount="3"
        android:columnCount="3"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Obrazek_NapisWybierzKonto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <Button
        android:id="@+id/ButtonDodaj"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="500dp"
        android:foreground="@drawable/dodawanie100x100"
        app:layout_constraintTop_toBottomOf="@+id/Obrazek_NapisWybierzKonto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>